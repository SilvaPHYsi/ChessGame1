package exerc√≠cioError;

import java.util.Scanner;

public class principal {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		try {
			System.out.println("Enter account data: ");
			System.out.println("Account Number: ");
			Integer number = sc.nextInt();
			System.out.println("Holder :");
			String holder = sc.next();
			System.out.println("Enter the initial balance: ");
			Double initialBalance = sc.nextDouble();
			System.out.println("Enter the withdraw limit: ");
			Double withdrawlimit = sc.nextDouble();

			Account acc = new Account(number, holder, initialBalance, withdrawlimit);
			System.out.println(acc);
			System.out.println("Enter a deposit :");
			Double amount = sc.nextDouble();
			acc.deposit(amount);
			System.out.println("Do a withdraw : ");
			Double amount2 = sc.nextDouble();
			acc.withdraw(amount2);
		} catch (DomainException e) {
			System.out.println("Error in register" + e.getMessage());

		} catch (Exception e) {
			System.out.println("Unexpected error");
		}
		sc.close();
	}

}
